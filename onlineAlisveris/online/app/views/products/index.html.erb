<h1>Mevcut Yiyecekler</h1>

<table>
  <% @products.each do |product| %>
    <tr class= "<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(product.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= product.title %></dt>
          <dd><%= truncate(strip_tags(product.description), length:60) %></dd>
          <dt><%= product.price %></dt>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Goster', product %><br>
        <%= link_to 'Duzenle', edit_product_path(product) %><br/>
        <%= link_to 'Sil', product, method: :delete, data: { confirm: 'Emin misin?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br>

<%= link_to 'Yeni Yiyecek', new_product_path %>
