<h1>Shopping Cart</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to 'goster', cart %></td>
        <td><%= link_to 'Duzenle', edit_cart_path(cart) %></td>
        <td><%= link_to 'sil', cart, method: :delete, data: { confirm: 'Emin misin' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Sepet', new_cart_path %>
