<% unless cart.line_items.empty? %>
<div class="cart_title">Sepetiniz</div>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= cart.total_price %>tl</td>
  </tr>
</table>

<%= button_to "Gonder", new_order_path, method: :get %>

<%= button_to 'Bosalt', cart, method: :delete, data: {confirm: 'Emin misin?' } %>
<% end %>
