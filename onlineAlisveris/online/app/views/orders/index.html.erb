<h1>Talepler</h1>

<table>
  <thead>
    <tr>
      <th>Adi</th>
      <th>Adresi</th>
      <th>Email</th>
      <th>Odeme Sekli</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Goster', order %></td>
        <td><%= link_to 'Duzenle', edit_order_path(order) %></td>
        <td><%= link_to 'Sil', order, method: :delete, data: { confirm: 'Emin misin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Talep', new_order_path %>
